<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/image_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_description_black_48dp" />

    <TextView
        android:id="@+id/text_name_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textColor="@android:color/primary_text_light"
        android:layout_toLeftOf="@+id/checkbox_pdf"
        android:layout_toRightOf="@+id/image_pdf"
        android:layout_toEndOf="@+id/image_pdf" />

    <TextView
        android:id="@+id/text_size_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name_pdf"
        android:text="TextView"
        android:layout_toLeftOf="@+id/checkbox_pdf"
        android:layout_toRightOf="@+id/image_pdf"
        android:layout_toEndOf="@+id/image_pdf" />

    <CheckBox
        android:id="@+id/checkbox_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:enabled="false"/>

</RelativeLayout>